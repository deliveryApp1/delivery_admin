{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "types/*": ["types/*"],
      "services/*": ["services/*"],
      "assets/*": ["assets/*"],
      "utils/*": ["utils/*"],
      "hooks/*": ["hooks/*"],
      "store/*": ["store/*"],
      "pages/*": ["pages/*"],
      "constants/*": ["constants/*"],
      "components/*": ["components/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "plopfile.ts", "src/i18next.js"],
  "exclude": ["node_modules"]
}
